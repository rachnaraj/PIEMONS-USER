<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#95B6CF">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary" />



    <ImageButton
        android:id="@+id/take_photos"
        android:layout_width="196dp"
        android:layout_height="123dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="83dp"
        android:autoText="true"
        android:background="@drawable/camera_image"
        android:text="Take Photos"
        android:textColor="#f6faf8"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="105dp" />


    <ImageButton
        android:id="@+id/upload_photos"
        android:layout_width="195dp"
        android:layout_height="125dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="155dp"
        android:autoText="true"
        android:background="@drawable/upload"
        android:text="Upload Photos"
        android:textColor="#f6faf8"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="273dp" />


    <ImageButton
        android:id="@+id/upload_loc"
        android:layout_width="200dp"
        android:layout_height="119dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:autoText="true"
        android:background="@drawable/location"
        android:text="Upload Locations"
        android:textColor="#f6faf8"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="273dp" />
</RelativeLayout>